{
    "compilerOptions": {
        // Output related
        "target": "es2017",
        "sourceMap": true,

        // Module resolution
        "moduleResolution": "node",

        // Type checking
        "lib": ["es2017"],
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "skipLibCheck": true,

        "module": "CommonJS",
        "outDir": "build"
    },
    "include": ["src/**/*"],
    "compileOnSave": true
}
